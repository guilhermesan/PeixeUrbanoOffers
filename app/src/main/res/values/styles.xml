<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Roboto">
        <item name="fontType">roboto_regular</item>
    </style>

    <style name="Text.Roboto.Light">
        <item name="fontType">roboto_light</item>
    </style>

    <style name="Text.Roboto.bold">
        <item name="fontType">roboto_bold</item>
    </style>

    <style name="Text.Roboto.Regular">
        <item name="fontType">roboto_regular</item>
    </style>

    <style name="Text.Roboto.medium">
        <item name="fontType">clear_sans_medium</item>
    </style>

    <style name="SplashIdentification" parent="Text.Roboto.Light">
        <item name="android:textSize">@dimen/text_small1x</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
